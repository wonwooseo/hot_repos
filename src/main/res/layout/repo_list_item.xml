<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/repolist_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Repo name" />

    <TextView
        android:id="@+id/repolist_item_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:layout_below="@+id/repolist_item_title"
        android:textSize="17sp"
        android:text="Owner" />

    <TextView
        android:id="@+id/repolist_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_alignStart="@+id/repolist_item_subtitle"
        android:layout_below="@+id/repolist_item_subtitle"
        android:textStyle="italic"
        android:text="Repo description" />

</RelativeLayout>
